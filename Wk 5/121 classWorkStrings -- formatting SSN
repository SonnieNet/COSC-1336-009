# This function will display the start of project
def projectStart():
    print("-" * 60)
    print("\tStart of Project")
    print("\tWritten By Sonnie Chauvin")
    print("\tLearning Strings")
    print("-" * 60)

# This fucntion will display the end of project
def projectEnd():
    print('\n')
    print('-' * 60)
    print('\tEnd of project')

# This function will get the user's entry for a float
def getFloatData(prompt):
    while (True):
        try:
            
            value = float(input(prompt))

            return value

        except ValueError:
            print('\t\tERRor MSG! Non numbers entered')

# This fucntion will get the user's entry for an integer
def getIntegerData(prompt):

    while (True):
        try:
            value = int(input(prompt))
            return value

        except ValueError:
            print('\t\tERRor MSG! Non numbers entered')

# This function will get the user's entry of string
def getStringData(prompt):
    value = input(prompt).strip(' ')

    return value

# This function will get a char input
def getCharData(prompt):

    while (True):
        value = input(prompt)

        value = value.upper()

        if (value in ['B', 'C', 'X']):
            return value
        else:
             print('\t\tERRor MSG! Enter B | C | X')

def main():
    # Display start of project
    projectStart()

    SSN = getStringData('\tEnter your SSN (xxx-xx-xxxx):')

    print('\tEntered: ', SSN)
          
    #conditions to check; 9 characters
    # ; must have 2 dashes

    if(len(SSN)!=11):
        print('\t', SSN, 'is not a valid SSN; Incorrect length') #checks for length; len determines LENgth of input
    else:
        if(SSN.count('-') != 2 or SSN[3] != '-' or SSN[6] != '-' ):  #checks for dashes in correct place - the 3rd and 6th (starts at 0) value not equal to a dash, show error
            print('\t,', SSN, 'is not a valid SSN')
        else:
            if(SSN.replace('-','').isdigit()): #removes dashes before checking if all values are numbers (since dashes are required)
                print('\tValid SSN: ', SSN)
            else:
                print('\t',SSN, 'is not a valid SSN; Non-numeric entered')
    
    
    # Display end of project
    projectEnd()
   
main()
