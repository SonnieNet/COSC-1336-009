# This function will display the start of the project
def projectStart():
    print('Start of Project 4')
    print('Written by: Sonnie Chauvin')
    print('Date: 11/22/2025')
    print('-' * 50 )
    print('\tSum of odd numbers in a range between 1 and users input')
    print('-' * 50 + '\n')

# This function will display the start of the project
def projectEnd():
    print('-' * 50)
    print('End of Project')

# This function will return an integer input from the user
def getIntegerData(prompt):
    while (True):
        try:
            userInput = int(input(prompt))

            if (userInput > 1):
                return userInput

            else:
                print('\t\tERROR MSG! Input must be an integer greater than 1.') 
            
        except ValueError:
            print('\t\tERROR MSG! Input must be a number.')

# This function will return a float input from the user
def getFloatData(prompt):
    while (True):
        try:
            value = float(input(prompt))
            return value
        except ValueError:
            print('\t\tERROR MSG! Input must be a number.')

# This function will return a string input from the user
def getStringData(prompt):
    value = input(prompt)
    return value

# This function will return a string input from the user
def getCharData(prompt):

    while (True):
        value = input(prompt)

        value = value.upper()
        if (value in ['W', 'D', 'E']):
            return value

        print('\t\tERROR Message: Wrong selection')

def getOddNumbersAndSum(userInput):

    total = 0 #stores the sum of only the numbers generated/printed
    print('The numbers are:')

    for ctr in range (0, userInput +1): #+1 allows for input num to be displayed
        if(ctr % 2 != 0):
            print('\t', ctr)
            total += ctr #sum of only the odd numbers

    print('The sum of odd integers between 1 and ', userInput, 'is', total)
    
def main(): 
    # Calls function to display the start of project
    projectStart()

    userInput = getIntegerData('\tEnter a positive integer: ')

    print('-' * 20)
    print('Summary: Sum of Positive Integers')
    print('-' * 20)

    getOddNumbersAndSum(userInput)

    # Calls function to display the start of project
    projectEnd()
      
main() # calling the function main()
